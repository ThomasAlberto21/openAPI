{
  "openapi": "3.0.3",
  "info": {
    "title": "Todolist RESTful API",
    "version": "1.0.0",
    "description": "OpenAPI for Todolist RESTful API",
    "contact": {
      "name": "Thomas Alberto",
      "email": "tomasalberto527@gmail.com",
      "url": "https://thomasalberto.vercel.app/"
    }
  },
  "servers": [
    {
      "description": "Todolist RESTful API Server",
      "url": "http://{environment}.todolist.com/api/v1.0.0",
      "variables": {
        "environment": {
          "default": "dev",
          "description": "Server Environment",
          "enum": [
            "dev",
            "qa",
            "prod"
          ]
        }
      }
    }
  ],
  "externalDocs": {
    "description": "Repository Todolist RESTful API",
    "url": "-"
  },
  "tags": [
    {
      "name": "Todolist",
      "description": "Todolist RESTful API"
    }
  ],
  "paths": {
    "/todolist": {
      "get": {
        "tags": [
          "Todolist"
        ],
        "summary": "Get all todolist",
        "description": "Get all active todolist by default",
        "parameters": [
          {
            "name": "include_done",
            "in": "query",
            "required": false,
            "description": "Is include done todolist",
            "schema": {
              "type": "boolean",
              "nullable": true,
              "default": false
            }
          },
          {
            "name": "name",
            "in": "query",
            "required": false,
            "description": "Search todolist by name",
            "schema": {
              "type": "string",
              "nullable": true,
              "minLength": 1,
              "maxLength": 100
            }
          }
        ],
        "responses": {}
      },
      "post": {
        "tags": [
          "Todolist"
        ],
        "summary": "Create new todolist",
        "description": "Create new todolist to database",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100,
                    "required": true
                  },
                  "date": {
                    "type": "string",
                    "format": "date",
                    "required": true
                  },
                  "description": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100,
                    "required": false
                  }
                }
              }
            }
          }
        },
        "responses": {}
      }
    },
    "/todolist/{todolistId}": {
      "put": {
        "tags": [
          "Todolist"
        ],
        "summary": "Update todolist",
        "description": "Update existing todolist in database",
        "parameters": [
          {
            "name": "todolistId",
            "in": "path",
            "required": true,
            "description": "Todolist Id for updated",
            "schema": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100,
                    "required": true
                  },
                  "date": {
                    "type": "string",
                    "format": "date",
                    "required": true
                  },
                  "description": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 100,
                    "required": false
                  }
                }
              }
            }
          }
        },
        "responses": {}
      },
      "delete": {
        "tags": [
          "Todolist"
        ],
        "summary": "Delete todolist",
        "description": "Delete existing todolist in database",
        "parameters": [
          {
            "name": "todolistId",
            "in": "path",
            "required": true,
            "description": "Todolist Id for deleted",
            "schema": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            }
          }
        ],
        "responses": {}
      }
    }
  }
}
